<h1 class="text-center">Posts</h1>

<div class='row justify-content-center'>
<%= link_to 'New Post', new_post_path, class: 'btn btn-primary mb-3' %>
</div>

<div class="row justify-content-center">
  <% @posts.each do |post| %>
    <div class="col-md-4">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= link_to post.title, post %></h5>
          <p class="card-text"><%= truncate(post.body, length: 100) %></p>
          <%= link_to 'Read More', post, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
